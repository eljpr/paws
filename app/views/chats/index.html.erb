<div class="parent container h-100">
  <h1>Previous questions</h1>

  <div class="container d-flex flex-column align-items-center">
    <% @messages.each do |message|  %>
      <div class="card d-flex flex-column h-100 question">
        <div class="row">
          <div class="row row-cols-2 d-flex justify-content-between">
            <div class="col-1">
              <span class="chatbox-question-icon">
                <i class="fa-solid fa-circle-question"></i>
              </span>
            </div>
            <div class="col-5 d-flex justify-content-end">
              <span class="chatbox-created-at"> <%= message.created_at.strftime("%d-%m-%Y") %> </span>
            </div>
          </div>

          <p><%= message.question %></p>
        </div>
      </div>

      <div class="card d-flex flex-column h-100 answer">
        <div class="row">
          <div class="col">
            <span class="chatbox-answer-icon">
              <i class="fa-solid fa-comment-dots"></i>
            </span>
            <p><%= message.content %></p>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to new_chat_path, class:"dgreen-button bttn-chatbox" do %>
      <span>Ask something</span>
      <i class="fa-solid fa-comment-medical"></i>
    <% end %>
  </div>
</div>
