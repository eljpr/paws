<h1> <%= @dog.name %>'s details</h1>
<div class="card">
<%= cl_image_tag @dog.photo.key, height: 300, width: 400, crop: :fill %>
  <p>Breed: <%= @dog.breed %></p>
  <p>Date of birth: <%= @dog.date_of_birth %></p>
  <p>Pre-existing condition:<%= @dog.condition %></p>
  <p>Medication: <%= @dog.medication %></p>
  <p>Weight: <%= @dog.weight %></p>
  <p>Vet:
  <% if @dog.vet_dogs %>
    <% @dog.vet_dogs.each do |vet_dog| %>
      <%= vet_dog.user.first_name %>
      <% end %>
      <% else %>
      <%= @dog.name "doesn't have a vet"%>
  <% end %>
  </p>

</div>


<% if current_user.id == @dog.user.id  %>
  <%= render "owner_show" %>
<% else %>
  <%= render "else_show" %>
<% end %>
