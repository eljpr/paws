<div class="parent container h-100">
  <h1>My dogs</h1>

  <div class="container d-flex flex-column align-items-center">
    <div class="row d-flex flex-column w-100 text-center">
      <%= link_to new_dog_path, class:"dgreen-button bttn-log-index" do %>
        <span>Add new dog</span>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>

  <% @dogs.each do |dog| %>
    <div class="card-container dogs-card-container">
      <div class="card-body-details dog-card-center">
        <% if dog.photo.attached? %>
          <%= cl_image_tag dog.photo.key, gravity: "auto", crop: "fill", alt: "#{dog.name}", class:'img-square'%>
        <% else %>
          <%= image_tag "dog_placeholder", class:"img-square" %>
        <% end %>

        <div class="dog-name-link">
          <br>
          <h4><%= link_to dog.name, dog_path(dog), class:"orange-back-link"%></h4>
          <p class="card-text"><span class="detail-key"><i class="fa-solid fa-paw"></i> : </span> <%= dog.breed %></p>
        </div>
      </div>

      <br>
    </div>
  <% end %>

</div>
