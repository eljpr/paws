<div class="container">
  <h1><%= @dog.name %>'s prescriptions</h1>
  <div>
    <%= link_to dog_path(@dog), class:"orange-back-link" do %>
      <i class="fa-solid fa-arrow-left"></i> <%= @dog.name %>
    <% end %>
  </div>
  <% @prescriptions.each do |prescription| %>
    <% days_left = prescription.end_date - Date.today %>
<br>
  <!--if prescription is ongoing-->
    <% if !prescription.completed? %>
    <h5 class="dblue-title"><strong>Ongoing Prescriptions</strong></h5>
    <div class="prescriptions-status">
      <h6>
      <%= link_to dog_prescription_path(@dog, prescription), class:"yellow-back-link" do %>
        <%= prescription.medication_name %>
      <% end %>
      </h6>
  <!--number of days left on prescription-->
        <% if days_left > 1 %>
        <p><em><%= days_left.to_i %> days left</em></p>
          <% else %>
        <p><em><%= days_left.to_i %> day left</em></p>
          <% end %> <!--end of days left if statement-->
    </div>

  <!--if prescription is complete-->
    <% else %>
    <hr>
    <h5 class="dblue-title"><strong>Completed Prescriptions</strong></h5>
    <div class="prescriptions-status">
    <h6>
      <%= link_to dog_prescription_path(@dog, prescription), class:"yellow-back-link" do %>
        <%= prescription.medication_name %>
      <% end %>
    </h6>
    </div>
    <% end %> <!--end of if statement for prescription status-->
  <% end %> <!--end of prescription iteration-->
</div>
