<h1>All your clients</h1>
<div class="row">

<% @patients.each do |dog| %>
    <div class="col mt-3 mb-3">
      <div class="card">
        <img src="" class="card-img-top" alt="...">
        <div class="card-body">
          <div class="d-flex justify-content-between mb-3">
            <div>
              <h5 class="card-title"><%= dog.name  %> </h5>
              <p class="card-text">Owner: <%= dog.user.first_name %> </p>
              <p class="card-text">Address: <%= dog.user.address %></p>
              <p class="card-text">Mobile number: <%= dog.user.mobile_number %> </p>
            </div>
          </div>

          <div class="d-flex justify-content-between" >
            <div>
            <%= link_to 'Details', user_path(dog.user) %>
            </div>
            <div>
            <%= link_to 'Back', root_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
