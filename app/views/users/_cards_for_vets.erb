<h1>All your clients</h1>
<div class="row">
<% @patients.each do |dog| %>
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
      <div class="card-container">
        <div class="title-flexbox">
          <div class="orange-title card-nav-title">
            <h3 class="card-title"><%= dog.name  %> </h3>
          </div>
          <div class="card-nav-img img-rounded">
              <%= cl_image_tag dog.photo.key, width: 40, height: 50, gravity: "auto", crop: "fill", class: "avatar", alt: "#{dog.name}" %>
          </div>
        </div>
          <div class="card-body-details">
            <p class="card-body-text"><span class="detail-key"><strong>Owner:</strong></span> <%= link_to dog.user.first_name, user_path(dog.user), class:"owner-name" %> </p>
            <p class="card-body-text"><span class="detail-key"><strong>Address:</strong></span> <%= dog.user.address %></p>
            <p class="card-body-text"><span class="detail-key"><strong>Mobile number:</strong></span> <%= dog.user.mobile_number %> </p>
          </div>

<br>
          <div class="button-flexbox" >
            <div>
            <%= link_to 'Details', dog_path(dog), class:"dgreen-button" %>
            </div>
            <div>
              <%= link_to root_path, class:"green-back-link" do %>
                <i class="fa-solid fa-arrow-left"></i> Home
              <% end %>
            </div>
          </div>
      </div>

    </div>
  <% end %>
</div>
