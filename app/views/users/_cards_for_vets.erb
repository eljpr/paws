<%= stylesheet_link_tag("card_for_vets")%>

<h1>All your clients</h1>
<div class="row">
<% @patients.each do |dog| %>
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
      <div class="card">
        <div class="card-body">

          <div>
            <div class="d-flex justify-content-between mb-3">
            <div>
              <h3 class="card-title"><%= dog.name  %> </h3>
              </div>
              <div>
                <%= cl_image_tag dog.photo.key, width: 40, height: 50, gravity: "auto", crop: "fill", class: "avatar", alt: "#{dog.name}" %>
              </div>
              </div>
            </div>
          <div class="dog-info">
            <p class="card-text"><span class="details-key"><strong>Owner:</strong></span> <%= link_to dog.user.first_name, user_path(dog.user), class:"owner-name" %> </p>
            <p class="card-text"><span class="details-key"><strong>Address:</strong></span> <%= dog.user.address %></p>
            <p class="card-text"><span class="details-key"><strong>Mobile number:</strong></span> <%= dog.user.mobile_number %> </p>
          </div>

<br>
          <div class="d-flex justify-content-between" >
            <div>
            <%= link_to 'Details', dog_path(dog), class:"link-button" %>
            </div>
            <div>
            <%= link_to 'Back', root_path, class:"back-link" %>
            </div>
        </div>
          </div>

        </div>
      </div>
  <% end %>
</div>
