
<h1>Select your vet</h1>
<div class="row">
<% @vets.each do |vet| %>
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
      <div class="card-container">
          <div class="title-flexbox">
            <div class="orange-title card-nav-title">
              <h3 >DR. <%= vet.first_name%> <%= vet.last_name %></h3>
            </div>
            <div class="card-nav-img img-rounded">
                <%= cl_image_tag vet.photo.key, gravity: "auto", crop: "fill", class: "avatar", alt: "#{vet.first_name}" %>
            </div>
          </div>
          <div class="card-body-details">
            <p class="card-body-text"><span class="detail-key"><strong>Cabinet Address:</strong> </span><%= vet.address %></p>
            <p class="card-body--text"><span class="detail-key"><strong>Contact number:</strong></span> <%= vet.mobile_number %></p>
            <p class="card-body--text"><span class="detail-key"><strong>Opening Time:</strong></span> <%= vet.opening_time.strftime('%I:%M:%S %p') %> </p>
            <p class="card-body-text"><span class="detail-key"><strong>Closing Time:</strong></span> <%= vet.closing_time.strftime('%I:%M:%S %p') %> </p>
          </div>

<br>
          <div class="details-button-flexbox" >
            <div>
              <%= link_to 'Details', user_path(vet), class:'dgreen-button' %>
            </div>
            <div>
              <%= link_to 'Back', root_path, class:'green-back-link' %>
            </div>
          </div>
    </div>

    </div>
  <% end %>
</div>
