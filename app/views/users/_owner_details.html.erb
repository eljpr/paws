    <div class="col mt-3 mb-3">
      <div class="card">

        <div class="card-body">
          <div class="d-flex justify-content-between mb-3">
            <div>
              <h5 class="card-title"><%= @owner.first_name %> <%= @owner.last_name %> </h5>
              <%= cl_image_tag @owner.photo.key, height: 300, width: 400, crop: :fill %>
              <p class="card-text">Address: <%= @owner.address %></p>
              <p class="card-text">Mobile number: <%= @owner.mobile_number %> </p>

              <p class="card-text">
              <% pets = @owner.dogs %>
              <% if pets == 1 %>
                <%= cl_image_tag pets.photo.key, height: 300, width: 400, crop: :fill %>
                <%= 'Pet: ' %>
                <%= pets.name %>
                <%= pets.date_of_birth %>
                <%= pets.breed %>
                <%= pets.weight %>
                <%= pets.condition %>
                <%= pets.medication %>
              <% else %>
                <%= 'Pets: ' %>
              <%pets.each do |pet|%><!---->
              <%= cl_image_tag pet.photo.key, height: 300, width: 400, crop: :fill %>
                <%= pet.name %>
                <%= pet.date_of_birth %>
                <%= pet.breed %>
                <%= pet.weight %>
                <%= pet.condition %>
                <%= pet.medication %>
              <% end %>
              <% end %>
              </p>
            </div>
          </div>

          <div class="d-flex justify-content-between" >
            <div>
            <%# <%= link_to 'See dog profile' %>
            </div>
            <div>
            <%= link_to 'Back to all patients', users_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
