<h1> Dr.<%= @user.last_name %>'s details</h1>
<div class="card-container">

    <%= cl_image_tag @user.photo.key, height: 500, width: 500, gravity: "auto", crop: "fill", alt: "#{@user.first_name}", class:'img-square'%>
    <h5 class="card-title"><strong><%= @user.first_name %> <%= @user.last_name %></strong> </h5>
    <div class="card-body-details">
      <p class="card-body-text"><span class="detail-key">Address:</span> <%= @user.address %></p>
      <p class="card-body-text"><span class="detail-key">Mobile number:</span> <%= @user.mobile_number %> </p>
      <p class="card-body-text"> <span class="detail-key">Opening time:</span> <%= @user.opening_time.strftime('%I:%M:%S %p') %> </p>
      <p class="card-body-text"> <span class="detail-key">Closing time:</span> <%= @user.closing_time.strftime('%I:%M:%S %p') %> </p>
    </div>

      <hr>
<% if @vet_dog.id == nil %>
  <div class="new-vet-form">
  <%= simple_form_for [@user, @vet_dog] do |f| %>
    <%= f.error_notification %>
      <div class="vet-form-inputs">
        <%= f.association :dog, :label => "Please select dog:", collection: current_user.dogs%>
      </div>
      <div class="button-flexbox">
        <div class="vet-form-actions">
          <p><%= f.submit "Book vet", class: 'dgreen-button'%></p>
        </div>
    <% end %>
  <% end %>
        <div>
          <%= link_to users_path, class:"green-back-link" do %>
          <i class="fa-solid fa-arrow-left"></i> Vets
          <% end %>
        </div>
      </div>
  </div>
</div>
